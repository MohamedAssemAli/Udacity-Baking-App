<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ingredient_widget_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/gradient_bg"
        android:gravity="center"
        android:padding="@dimen/margin_padding_size_micro">

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="@dimen/margin_padding_size_micro"
            android:src="@drawable/cake_icon"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_padding_size_medium"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ingredient_widget_recipe_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_padding_size_micro"
            android:textColor="@color/item_name"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ingredient_widget_recipe_serving"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_padding_size_micro"
            android:textColor="@color/description"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/ingredient_widget_ingredient_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_padding_size_micro"
            android:textColor="@color/item_name"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>